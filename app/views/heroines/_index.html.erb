<h2>All Heroines</h2>

<%= form_tag('/heroines/search')%>
<%= label_tag(:search, 'Search by Superpower')%>
<%= search_field(:search, :power)%>
<%= submit_tag "Search" %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%=link_to heroine.super_name, heroine_path(heroine) %>
    </li>
    <br>
  <% end %>
</ul>
