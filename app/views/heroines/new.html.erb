<h1>Create Heroine</h1>
<%= form_for @heroine do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :super_name %>
  <%= f.text_field :super_name %>
  <br>
  <%= f.label "Power" %>
  <%= f.collection_select :power_id, Power.all, :id, :name %>
  <br>
  <%= f.submit %>
<% end %>

<% if @heroine.errors.any? %>
  <strong><%= pluralize(@heroine.errors.count, 'error') %> prevented you from creating this heroine:</strong>
  <ul>
  <% @heroine.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>